
# Standard Node environment flag
NODE_ENV=development

# API base URL for the backend
API_BASE_URL=http://127.0.0.1:9098

# OAuth client IDs for frontend flows
# Google (used client-side to initialize Google Identity Services if you add it)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=

# GitHub (used client-side for the authorization URL)
NEXT_PUBLIC_GITHUB_CLIENT_ID=

# DigitalOcean Spaces Configuration (for client-side reference)
NEXT_PUBLIC_SPACES_REGION=nyc3
NEXT_PUBLIC_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
NEXT_PUBLIC_SPACES_PUBLIC_URL=https://your_bucket_name.nyc3.digitaloceanspaces.com

# Video Upload Settings
NEXT_PUBLIC_MAX_VIDEO_SIZE=104857600
NEXT_PUBLIC_CHUNK_SIZE=5242880
NEXT_PUBLIC_MAX_RETRIES=3
