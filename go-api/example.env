# Application Configuration
VERSION=1.0.0
API_VERSION=v1

# Logging Configuration
LOG_LEVEL=info

# Application Mode: development, production, testing
MODE=development
SERVICE_NAME=skoolz

# Server Ports
HTTP_PORT=9090
GRPC_PORT=50001

# Health Check Configuration
HEALTH_CHECK_ROUTE=/health

# JWT Configuration
JWT_SECRET=SKooLLZ@!!22
SERVICE_BASE_PATH=/api/v1

# MongoDB Configuration (either provide MONGO_URI or individual parts)
# Matches docker-compose credentials (root/password) and DB name (skoolz)
MONGO_URI=mongodb://root:password@localhost:27017/skoolz?authSource=admin
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USER=root
MONGO_PASSWORD=password
MONGO_DATABASE=skoolz
MONGO_AUTH_SOURCE=admin
MONGO_REPLICA_SET=
MONGO_TLS=false
MONGO_MAX_POOL_SIZE=20
MONGO_MIN_POOL_SIZE=0
MONGO_CONNECT_TIMEOUT_MS=10000

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=password
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE=5

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@skoolz.com
FROM_NAME=Skoolz
EMAIL_TEMPLATE_PATH=./pkg/email/templates
EMAIL_QUEUE_TYPE=kafka

# OAuth Configuration
GOOGLE_CLIENT_ID="578264402581-f0an1n8llgpa1n0bpq4cetkn8pjatqui.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="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"
# The callback URL that Google will redirect to (must match Google Console)
OAUTH_REDIRECT_URL=http://localhost:9090/api/v1/auth/google/callback
# Frontend base URL to redirect after successful login
FRONTEND_APP_URL=http://localhost:3000

# CORS
# When running frontend on localhost:3000, allow it here. Comma-separated values supported.
CORS_ORIGIN=http://localhost:3000
